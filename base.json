{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default Renovate config where argument is assignee",

  "timezone": "Asia/Ho_Chi_Minh",
  "schedule": [
    "at 20:00 on Sunday"
  ],

  "assignees": ["{{arg0}}"],
  "labels": ["dependencies"],
  "platformCommit": "enabled",
  "platformAutomerge": true,
  "rangeStrategy": "pin",
  "transitiveRemediation": true,
  "pinDigests": true,

  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "prFooter": "This PR has been generated by [Renovate Bot](https://github.com/renovatebot/renovate).",

  "dependencyDashboard": true,
  "dependencyDashboardHeader": "![](https://i.imgur.com/kX4uzqH.gif)",
  "dependencyDashboardLabels": ["dependencies"],

  "lockFileMaintenance": {
    "enabled": true,
    "assignees": ["{{arg0}}"],
    "schedule": ["before 5am on the first day of the month"],
    "extends": ["github>alikuxac/renovate:automerge"]
  },

  "recreateClosed": true,
  "rebaseStalePrs": true,

  "semanticCommits": "enabled",

  "vulnerabilityAlerts": {
    "labels": ["dependencies", "security"],
    "rangeStrategy": "update-lockfile"
  },

  "git-submodules": {
    "enabled": true
  },

  "packageRules": [
    {
      "description": "Automerge minor updates for non-critical dependencies",
      "matchUpdateTypes": ["minor"],
      "matchPackageNames": [
        "lodash"
      ],
      "extends": ["github>alikuxac/renovate:automerge"]
    },
    {
      "description": "Do not automerge major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Automerge patches, pins, digests, rollbacks for all",
      "matchUpdateTypes": ["patch", "pin", "pinDigest", "digest", "rollback"],
      "extends": ["github>alikuxac/renovate:automerge"]
    }
  ],
  "pin": {
    "groupName": "Pin Dependencies",
    "groupSlug": "pin-dependencies"
  }
}
